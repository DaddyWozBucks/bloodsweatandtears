		div.title_text(flex="100" flex-gt-sm="none" layout="row" layout-align="center center")
			h2.nom.blood(flex="none") BLOOD
		div.title_text(flex="100" flex-gt-sm="none" layout="row" layout-wrap layout-align="center center")
			h2.nom.sweat(flex="none") SWEAT
		
		//- 	h1.nom.amp(flex="none" hide-xs hide-sm) &
