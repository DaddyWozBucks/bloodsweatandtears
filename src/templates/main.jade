div(flex="100" layout="row" layout-align="center start" layout-wrap)
	
	div.title(flex="100" layout="row" layout-align="center center" layout-wrap ng-style="{'background-image': 'url(' + titleBg + ')'}" ng-class="{'start_view': startView}")
